---
import "../styles/main.css";
import HeadMeta from "../components/astro/HeadMeta.astro";
import Navbar from "../components/astro/Navbar.astro";
import BottomNavbar from "../components/astro/BottomNavbar.astro";
import Footer from "../components/astro/Footer.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <HeadMeta />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <BottomNavbar />
  </body>
</html>
